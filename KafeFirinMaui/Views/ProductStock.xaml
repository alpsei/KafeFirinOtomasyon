<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KafeFirinMaui.ViewModels"
             x:Class="KafeFirinMaui.Views.ProductStock"
             Title="Stok Takip">

    <Grid Padding="10" ColumnSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Ürün Listesi (Sol Taraf) -->
        <CollectionView x:Name="ProductListView"
                        Grid.Column="0"
                        ItemsSource="{Binding ProductList}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout x:Name="ProductGridLayout"
                         Orientation="Vertical"
                         Span="2"
                         HorizontalItemSpacing="10"
                         VerticalItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5"
                           Padding="10"
                           CornerRadius="12"
                           BorderColor="Gray"
                           HasShadow="True"
                           HeightRequest="150"
                           WidthRequest="150">
                        <StackLayout>
                            <Label Text="{Binding ProductName}" FontAttributes="Bold" />
                            <Label Text="{Binding Price, StringFormat='₺{0:F2}'}" />
                            <Label Text="{Binding Stock}" FontAttributes="Italic" />
                            <Button Text="Ekle"
                                    Command="{Binding BindingContext.UpdateStockCommand, Source={x:Reference ProductListView}}"
                                    CommandParameter="{Binding .}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Stok Bilgisi ve Sipariş Verme (Sağ Taraf) -->
        <Frame Grid.Column="1"
               Padding="10"
               BorderColor="Gray"
               CornerRadius="12"
               HasShadow="True">
            <StackLayout>
                <Label Text="Stok Durumu" FontSize="20" FontAttributes="Bold" />
                <CollectionView ItemsSource="{Binding StockInfo}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Label Text="{Binding ProductName}" />
                                <Label Text="{Binding Stock, StringFormat='{0} adet'}" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Stokları Güncelle"
                        Command="{Binding UpdateStockCommand}" />
            </StackLayout>
        </Frame>
    </Grid>

</ContentPage>
